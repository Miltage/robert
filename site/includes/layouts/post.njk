---
layout: default
---

{# a post layout #}
<main id="main" class="main inner flex flex-1 flex-col md:flex-row py-10 lg:py-20 focus:outline-none" tabindex="-1">

    {% include "components/sidebar.njk" %}

    <section id="container-centre" class="column centre flex-1">

        <div class="post-header mb-12 md:mb-20">

            <h1 class="page-title text-3xl md:text-center md:text-5xl lg:text-6xl">{{ title }}</h1>

            <div class="text-sm md:text-base text-gray-600 flex flex-col text-center lg:flex-row lg:text-left justify-center">

                <time datetime="{{ date }}">
                    {{ date | dateDisplay }}
                </time>

                {% if tags %}

                    {# this will create a comma for multiple category links #}
                    {% set comma = joiner() %}

                    <p class="px-2">â€”</p>

                    <p class="category">Posted in

                        {% for item in tags %}

                            {%- if item != "blog" -%}

                                <a href="/category/{{ item }}">{{ comma() }} {{ item | capitalizeWords }}</a>

                            {%- endif -%}

                        {% endfor %}

                    </p>

                {% endif %}

            </div>

            {# featured post image #}
            {% if featured_image %}

                <figure class="mt-10 md:mt-20">

                    <img data-lazy="{{ featured_image }}" alt="{{ image_caption }}">

                    {% if image_caption %}

                        <figcaption class="text-center text-sm italic text-gray-600 mt-4">{{ image_caption }}</figcaption>

                    {% endif %}

                </figure>

            {% endif %}

        </div>

        <div class="content post md:px-16">

            {{ content | safe }}

            {# category links list #}
            {% if tags %}

                <ul class="flex pt-4 flex-col text-center md:flex-row md:text-left">

                    {% for item in tags %}

                        {%- if item != "blog" -%}

                            <li class="mr-2 my-2">
                                <a class="inline-block border border-teal-300 px-4 py-2 text-teal-500 text-xs font-semibold rounded hover:text-white hover:bg-teal-500 hover:border-teal-500 w-4/5 md:w-auto" href="/category/{{ item }}">{{ item | capitalizeWords }}</a>
                            </li>

                        {%- endif -%}

                    {% endfor %}

                </ul>

            {% endif %}

        </div>

        <div class="my-6 md:hidden"><img class="w-4 h-4 inline mr-1" src="images/icons/back.svg" />
        <a href="/">Back to home</a></div>

    </section>

</main>
